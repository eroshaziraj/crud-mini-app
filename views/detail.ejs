<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body class="bg-light">
    <div class="container py-5">
        <% if(blog) { %>
            <div class="card p-4 shadow-sm">
                <h2 class="mb-3">
                    <%= blog.name %>
                        <%= blog.surname %>
                </h2>
                <p class="lead">
                    <%= blog.body %>
                </p>
                <div class="mt-4">
                    <a href="/edit/<%= blog.id %>" class="btn btn-outline-secondary me-2">Edit</a>
                    <a href="/delete/<%= blog.id %>" class="btn btn-danger">Delete</a>
                </div>
            </div>
            <% } %>
    </div>
</body>


</html>